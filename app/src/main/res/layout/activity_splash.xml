<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashActivity"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/splash1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/applogo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="322dp"
        android:layout_height="140dp"

        android:layout_marginBottom="104dp"

        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:text="Welcome to MedCare"

        android:textAlignment="center"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash1"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="Your care is our responsibility !"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/splash1"
        app:layout_constraintVertical_bias="1.0"
        app:layout_goneMarginTop="30dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/firstpagesignin"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
       app:layout_goneMarginStart="16dp"
        app:layout_goneMarginEnd="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/darkblue"
        android:paddingTop="12dp"
        android:text="Sign in"
        android:textAlignment="center"
        android:textColor="#f9f6f6"
        android:textSize="15dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.548" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text="Not have account yet?"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@id/firstpagesignin"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.751"
        app:layout_goneMarginBottom="14dp"
        app:layout_goneMarginTop="14dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/firstpagesignup"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/darkblue"
        android:paddingTop="12dp"
        android:text="Sign up"
        app:layout_goneMarginStart="16dp"
        app:layout_goneMarginEnd="16dp"
        android:textAlignment="center"
        android:textColor="#f9f6f6"
        android:textSize="15dp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstpagesignin"
        app:layout_constraintVertical_bias="0.58" />


</android.support.constraint.ConstraintLayout>