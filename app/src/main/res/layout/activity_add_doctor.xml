<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDoctor">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:src="@drawable/mydocfinal"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="My Doctor"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="25dp"
            android:typeface="sans"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:text="Add Doctor" />
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="330dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/myCardView"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardBackgroundColor="@android:color/transparent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    >
        <EditText
            android:id="@+id/Dname"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="166dp" />



        <EditText
            android:id="@+id/Dcontact"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="number|phone"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="240dp" />



        <EditText
            android:id="@+id/Dmail"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="240dp" />
</LinearLayout>

        </android.support.v7.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"
    android:background="@drawable/bluedark"
    >

        <ImageView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:src="@drawable/calldoc" />

        <ImageView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/maildoc" />

        <ImageView
            android:id="@+id/saveme"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:onClick="Save"
            android:src="@drawable/savedoc" />
    <ImageView
        android:id="@+id/time"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingRight="5dp"
        android:src="@drawable/appointfinal" />

</LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>